profiles {

    docker {
        docker.enabled = true
        process {
            withLabel: 'process' { container = 'aminhaghparast/wes_image:latest' }
            withLabel: 'bwa' { container = 'kathrinklee/bwa:latest' }
            withLabel: 'gatk' { container = 'broadinstitute/gatk:latest' }
            withLabel: 'annotation' { container = 'aminhaghparast/annovar_annotation:version1' }
            withLabel: 'resource' { container = 'oliversi/hg19' }
                }
            }
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
        process {
            withLabel: 'process' { container = 'docker://aminhaghparast/wes_image:latest' }
            withLabel: 'bwa' { container = 'docker://kathrinklee/bwa:latest' }
            withLabel: 'gatk' { container = 'docker://broadinstitute/gatk:latest' }
            withLabel: 'annotation' { container = 'docker://aminhaghparast/annovar_annotation:version1' }
            withLabel: 'resource' { container = 'docker://oliversi/hg19' }
                }
                 }
}